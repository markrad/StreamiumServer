    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "preLaunchTask": "MusicMount",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/output/index.js",
            "outFiles": [
                "${workspaceFolder}/output/**/*.js"
            ],
            "outputCapture": "std",
        },
        {
            "type": "bun",
            "request": "launch",
            "name": "Launch (bun) nodedaemon",
            // "skipFiles": [
            //     "<node_internals>/**"
            // ],
            "program": "${workspaceFolder}/index.ts",
            // "outputCapture": "std",
            "args": [
                "/home/bun/music"
            ]
        },
    ]
}